
@{
    ViewData["Title"] = "Emp Society Mapping Master";
    Layout = "~/Views/Shared/_Layout.cshtml";
    @inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor

    @using Microsoft.AspNetCore.Http
    string Add = HttpContextAccessor.HttpContext.Session.GetString("Add");
    int MenuId = Convert.ToInt32(HttpContextAccessor.HttpContext.Session.GetString("MenuId"));
}
     <script src="https://cdn.tailwindcss.com"></script>
<div class="w-full  min-h-screen" id="bdy">
    <input type="hidden" id="EmpCodeHid" value="@ViewBag.EmpCode" />

    <div class="mx-auto bg-white shadow rounded-lg p-6">
        <!-- Header -->
        <div class="flex items-center justify-between mb-6">
            <h1 class="text-2xl font-bold text-gray-800">Emp Society Mapping Master</h1>
           @*  <button type="button" class="bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded" data-toggle="modal" data-target="#exampleModal">
                Bulk Upload
            </button> *@
        </div>

     

        <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-4">
            <div>
                <label for="ClusterName" class="block text-sm font-medium text-gray-700">
Employee Code </label>
                <input type="text" id="EmployeeCode" class="mt-1 w-full border border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 px-3 py-2" required />
            </div>
             <div>
                <label for="IN Society" class="block text-sm font-medium text-gray-700">
IN Society </label>
                <select  id="INSociety" class="mt-1 w-full border border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 px-3 py-2" required >

                    @if (ViewBag.Society != null)
                    {
                        foreach (var e in ViewBag.Society as List<SelectListItem>)
                        {
                            <option value="@e.Value">@e.Text</option>
                        }
                    }
                </select>
            </div>
            <div>
                <label for="N Society" class="block text-sm font-medium text-gray-700">
Out Society </label>
                <select  id="OutSociety" class="mt-1 w-full border border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 px-3 py-2" required >

                    @if (ViewBag.Society != null)
                    {
                        foreach (var e in ViewBag.Society as List<SelectListItem>)
                        {
                            <option value="@e.Value">@e.Text</option>
                        }
                    }
                </select>
            </div>
            
        </div>

        <p id="massage" class="text-red-600 font-medium mb-4"></p>

        <div class="flex gap-4">
            <button id="savebtn" onclick="Save()" class="bg-green-600 hover:bg-green-700 text-white px-4 py-2 rounded d-none">
                Create Employee Society Mapping
            </button>
            <a href="~/Master/SocietyMapToEmployeeList?menuid=@MenuId" class="bg-gray-200 hover:bg-gray-300 text-gray-800 px-4 py-2 rounded">
                « Back to List
            </a>
            
        </div>
    </div>

    
</div>

<!-- Scripts -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js"></script>
<script src="~/js/Master/SoceityEmployeeMapping.js" asp-append-version="true"></script>
<script src="~/js/Master.js" asp-append-version="true"></script>
