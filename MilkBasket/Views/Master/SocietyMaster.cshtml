
@{
    ViewData["Title"] = "SocietyMaster";
    Layout = "~/Views/Shared/_Layout.cshtml";
    @inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor

    @using Microsoft.AspNetCore.Http
    string Add = HttpContextAccessor.HttpContext.Session.GetString("Add");
    int MenuId = Convert.ToInt32(HttpContextAccessor.HttpContext.Session.GetString("MenuId"));
}
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.tailwindcss.com"></script>
<div class="w-full min-h-screen" id="bdy">

    <input type="hidden" id="SocietyCodeHid" value="@ViewBag.SocietyCode" />

        
    <div class="max-w-7xl mx-auto bg-white shadow rounded-lg p-6">
        <div class="flex justify-content-between">
        <h3>Society Master</h3>
    
        </div>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mb-4 mt-6">
            <div>
                <label for="Society Code" class="block text-sm font-medium text-gray-700">Society Code</label>
                <input type="text" id="SocietyCode" name="Society Code" class="form-control mandatory" />
            </div>
           
            <div>

                <label for="SocietyName" class="block text-sm font-medium text-gray-700">Society Name </label>
                <input type="text" id="SocietyName" name="Society Name" class="form-control mandatory" required>
             
            </div>
            <div>

                <label for="Latitude" class="block text-sm font-medium text-gray-700">Latitude  </label>
                <input type="text" id="Latitude" name="Latitude" class="form-control mandatory" required>
             
            </div>

         <div>
                <label class="block text-sm font-medium text-gray-700" for="Longitude">Longitude  </label>
                    <input type="text" id="Longitude" name="Longitude" class="form-control mandatory" required>
             
            </div>
        </div>
        <p id="massage"></p>
        <a href="~/Master/SocietyList?Menuid=@MenuId" class="bg-blue-600 hover:bg-blue-700 text-decoration-none text-white px-4 py-2 rounded">« Back to List</a>

        <button id="savebtn" onclick="Save()" class="bg-green-600 hover:bg-green-700 text-white px-4 py-2 rounded">Create</button>
        

    </div>
    <!-- Modal -->
    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Bulk Upload</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>

                </div>
                <div class="modal-body">
                    @*  <div>
                    <button class="btn float-end">Download Format</button>
                    </div> *@

                    <div class="form-group">
                        <label>Excel File</label>
                        <input type="File" id="excelFile" class="form-control" name="name" value="" />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="button" id="btnexcelsave" class="btn btn-primary">Save changes</button>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js" integrity="sha512-v2CJ7UaYy4JwqLDIrZUI/4hqeoQieOmAZNXBeQyjo21dadnwR+8ZaIJVT8EE2iyI61OV8e6M8PP2/4hpQINQ/g==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
<script src="~/js/Master/Societymaster.js" asp-append-version="true"></script>
<script src="~/js/Master.js" asp-append-version="true"></script>
