
@{
    ViewData["Title"] = "Password";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.tailwindcss.com"></script>
<div class="w-full min-h-screen" id="bdy">

    <input type="hidden" id="SocietyCodeHid" value="@ViewBag.SocietyCode" />

        
    <div class="max-w-7xl mx-auto bg-white shadow rounded-lg p-6">
        
        <h3>Change Password </h3>
        
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mb-4 mt-6">
            <div>
                <label for="SelectLogin " class="block text-sm font-medium text-gray-700">Select Login</label>
               
                <select id="SelectLogin" Name="Select Login" class="form-control mandatory">
                    <option value="0">Select</option>
                    @if(ViewBag.username !=null){
                        foreach(var e in ViewBag.username as List<SelectListItem>){
                            <option value="@e.Value">@e.Text</option>
                            }
                    }

                </select>
            </div>
           
            <div>

                <label for="New Password" class="block text-sm font-medium text-gray-700">Enter New Password </label>
                <input type="text" id="NewPassword" name="New Password" class="form-control mandatory" required>
             
            </div>
            </div>
          

         
        <p id="massage"></p>
        

        <button id="savebtn" onclick="Save()" class="bg-green-600 hover:bg-green-700 text-white px-4 py-2 rounded">Click To Update Password</button>
        

    </div>
    
    </div>
</div>
