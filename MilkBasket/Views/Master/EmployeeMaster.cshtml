@{
    ViewData["Title"] = "EmployeeMaster";
    Layout = "~/Views/Shared/_Layout.cshtml";
    @inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor

    @using Microsoft.AspNetCore.Http
    string Add = HttpContextAccessor.HttpContext.Session.GetString("Add");
    int MenuId = Convert.ToInt32(HttpContextAccessor.HttpContext.Session.GetString("MenuId"));
}
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
  <script src="https://cdn.tailwindcss.com"></script>
<div class="w-full min-h-screen" id="bdy">
    <input type="hidden" id="DepartmentCode" value="@ViewBag.DepartmentCode" />
    <input type="hidden" id="AreaID" value="@ViewBag.AreaID" />
    <input type="hidden" id="AreaDesc" value="@ViewBag.AreaDesc" />
    <input type="hidden" id="EmpNoHid" value="@ViewBag.EmpNo" />

    <div class="max-w-7xl mx-auto bg-white shadow rounded-lg p-6">
        <!-- Header -->
        <div class="flex items-center justify-between mb-6">
            <h1 class="text-2xl font-bold text-gray-800">Employee Master</h1>
           @*  <button type="button" class="bg-blue-500 hover:bg-blue-600 text-white px-4 py-2 rounded" data-toggle="modal" data-target="#exampleModal">
                Bulk Upload
            </button> *@
        </div>

 

        <!-- Form Grid -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mb-4">
            <div>
                <label for="empNo" class="block text-sm font-medium text-gray-700">Employee No</label>
                <input type="text" id="empNo" name="Employee No" class="form-control mandatory"/>
            </div>
            <div>
                <label for="empName" class="block text-sm font-medium text-gray-700">Employee Name</label>
              <input type="text" id="empName" name="Employee Name " class="form-control mandatory"/>
            </div>
            <div>
                <label for="designation" class="block text-sm font-medium text-gray-700">Designation</label>
                <select id="designation" required name="Designation" class="form-control mandatory">
                    <option value="0">Select</option>
                    @if (ViewBag.Designation != null)
                    {
                        foreach (var e in ViewBag.Designation as List<SelectListItem>)
                        {
                            <option value="@e.Value">@e.Text</option>
                        }
                    }
                </select>
            </div>
            <div>
                <label for="email" class="block text-sm font-medium text-gray-700">Email ID</label>
                <input type="text" id="email" class="form-control" />
            </div>
        </div>

        <p id="massage" class="text-red-600 font-medium mb-4"></p>

        <!-- Buttons -->
        <div class="flex gap-4">
            <a href="~/Master/EmployeeList?Menuid=@MenuId" class="bg-blue-200 hover:bg-blue-300 text-white-800 px-4 py-2 rounded">
                « Back to List
            </a>
            <button id="savebtn" onclick="Save()" class="d-none bg-green-600 hover:bg-green-700 text-white px-4 py-2 rounded">
                Save
            </button>
            <button id="restbtn" onclick="clear1()" class="d-none bg-blue-500 hover:bg-blue-600 text-white px-4 py-2 rounded">
                Reset
            </button>
        </div>
    </div>

 
</div>

<!-- Scripts -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js"></script>
<script src="~/js/Master/Employee.js" asp-append-version="true"></script>
<script src="~/js/Master.js" asp-append-version="true"></script>
