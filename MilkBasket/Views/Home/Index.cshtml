@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="https://cdn.tailwindcss.com"></script>


<div class="w-full  min-h-screen" id="bdy">
    <div class="mx-auto bg-white shadow rounded-lg p-6">


    <div class="grid grid-cols-1 bg-white sm:grid-cols-2 lg:grid-cols-4 gap-6 w-full max-w-7xl">

        <!-- Total Employees -->
        <div class="bg-sky-600 hover:bg-sky-700 transition-colors text-white rounded-2xl shadow-lg p-6 flex flex-col items-center ">
            <i class="fas fa-users text-4xl mb-3"></i>
            <h2 class="text-lg font-bold">Total Employees</h2>
            <p class="text-2xl font-extrabold mt-2">@ViewBag.TotalEmp</p>
        </div>

        <!-- Present Employees -->
        <div class="bg-emerald-600 hover:bg-emerald-700 transition-colors text-white rounded-2xl shadow-lg p-6 flex flex-col items-center">
            <i class="fas fa-user-check text-4xl mb-3"></i>
            <h2 class="text-lg font-bold">Employees Present</h2>
            <p class="text-2xl font-extrabold mt-2">@ViewBag.TotalPresent</p>
        </div>

        <!-- Late Punching -->
        <div class="bg-amber-600 hover:bg-amber-700 transition-colors text-white rounded-2xl shadow-lg p-6 flex flex-col items-center ">
            <i class="fas fa-user-clock text-4xl mb-3"></i>
            <h2 class="text-lg font-bold text-center">Late Punching</h2>
            <p class="text-2xl font-extrabold mt-2">@ViewBag.TotalLatePunch</p>
        </div>

        <!-- Employees Absent -->
        <div class="bg-rose-600 hover:bg-rose-700 transition-colors text-white rounded-2xl shadow-lg p-6 flex flex-col items-center ">
            <i class="fas fa-user-times text-4xl mb-3"></i>
            <h2 class="text-lg font-bold">Employees Absent</h2>
            <p class="text-2xl font-extrabold mt-2">@ViewBag.TotalAbsent</p>
        </div>

    </div>


</div>
</div>


