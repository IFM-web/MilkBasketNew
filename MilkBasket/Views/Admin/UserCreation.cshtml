
@{
    ViewData["Title"] = "UserCreation";
    Layout = "~/Views/Shared/_Layout.cshtml";
    @inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor

    @using Microsoft.AspNetCore.Http
    string Add = HttpContextAccessor.HttpContext.Session.GetString("Add");
    int MenuId  = Convert.ToInt32(HttpContextAccessor.HttpContext.Session.GetString("MenuId"));
}
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.tailwindcss.com"></script>
<div class="w-full min-h-screen" id="bdy">

    <input type="hidden" id="Hid_Id" value="@ViewBag.Id" />
    <div class="max-w-7xl mx-auto bg-white shadow rounded-lg p-6">
        <!-- Header -->
        <div class="flex items-center justify-between mb-6">
            <h1 class="text-2xl font-bold text-gray-800">User Creation</h1>
            
        </div>



        <!-- Form Grid -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mb-4">
            <div>
                <label for="UserId" class="block text-sm font-medium text-gray-700">User Id</label>
                <input type="text" id="UserId" name="UserId" class="form-control mandatory" />
            </div>
            <div>
                <label for="UserName" class="block text-sm font-medium text-gray-700">User Name</label>
                <input type="text" id="UserName" name="UserName " class="form-control mandatory" />
            </div>
            <div>
                <label for="Password" class="block text-sm font-medium text-gray-700">Password</label>
                <input type="password" id="Password" name="Password " class="form-control mandatory" />
            </div>
            <div>
                <label for="ConfirmPassword" class="block text-sm font-medium text-gray-700">Confirm Password</label>
                <input type="password" id="ConfirmPassword" name="ConfirmPassword " class="form-control mandatory" />
            </div>
            <div>
                <label for="UserGroup" class="block text-sm font-medium text-gray-700">User Group</label>
                <select id="UserGroup" name="UserGroup" class="form-control mandatory">
    <option value="0">Select</option>
                    @if (ViewBag.UserGroup !=null){
                        foreach (var e in ViewBag.UserGroup as List<SelectListItem>){
                            <option value="@e.Value">@e.Text</option>
                            }
                    }

</select>
            </div>
            <div class="mt-4">
                <input type="checkbox" id="status" checked />  <label for="status" class="text-sm font-medium text-gray-700">Status</label>

            </div>

        </div>

        <p id="massage" class="text-red-600 font-medium mb-4"></p>

        <!-- Buttons -->
        <div class="flex gap-4">
            <a href="~/Admin/UserCreationList?Menuid=@MenuId" class="bg-blue-200 hover:bg-blue-300 text-white-800 px-4 py-2 rounded">
                « Back to List
            </a>
            <button id="savebtn" onclick="Save()" class="bg-green-600 hover:bg-green-700 text-white px-4 py-2 rounded">
                Save
            </button>
            <button id="restbtn" onclick="clear1()" class="bg-blue-500 hover:bg-blue-600 text-white px-4 py-2 rounded">
                Reset
            </button>
        </div>
    </div>


</div>

<!-- Scripts -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js"></script>
<script src="~/js/Admin/Usercreate.js" asp-append-version="true"></script>
<script src="~/js/Master.js" asp-append-version="true"></script>

