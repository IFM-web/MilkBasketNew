
@{
    ViewData["Title"] = "User Rights";
    Layout = "~/Views/Shared/_Layout.cshtml";
    @inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor

    @using Microsoft.AspNetCore.Http
    string Add = HttpContextAccessor.HttpContext.Session.GetString("Add");
    int MenuId = Convert.ToInt32(HttpContextAccessor.HttpContext.Session.GetString("MenuId"));
}


<script src="https://cdn.tailwindcss.com"></script>
<div class="w-full min-h-screen" id="bdy">

    <div class="mx-auto bg-white shadow rounded-lg p-6">

        <h3>User Rights </h3>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mt-4 mb-4">
            <div>
                <label for="User " class="block text-sm font-medium text-gray-700">User</label>

                <select id="User" Name="User" class="form-control mandatory">
                    <option value="0">Select</option>
                    @if (ViewBag.username != null)
                    {
                        foreach (var e in ViewBag.username as List<SelectListItem>)
                        {
                            <option value="@e.Value">@e.Text</option>
                        }
                    }

                </select>

            </div>

            <div>
                <label for="Company " class="block text-sm font-medium text-gray-700">Company</label>

                <select id="Company" Name="Company" class="form-control mandatory" onchange="RegionBind()">
                    <option value="0">Select</option>
                    @if (ViewBag.company != null)
                    {
                        foreach (var e in ViewBag.company as List<SelectListItem>)
                        {
                            <option value="@e.Value">@e.Text</option>
                        }
                    }

                </select>

            </div>
            <div>
                <label for="Region " class="block text-sm font-medium text-gray-700">Region</label>

                <select id="Region" Name="Region" class="form-control mandatory" onchange="bindbarnch()">
                    <option value="0">Select</option>
                    

                </select>

            </div>  <div>
                <label for="Branch " class="block text-sm font-medium text-gray-700">Branch</label>

              @*   <select id="Branch" Name="Branch" class="form-control mandatory" >
                    <option value="0">Select</option>
                  

                </select> *@
                <div class="custom-multiselect w-100 position-relative">
                    <input type="hidden" class="form-control " id="customSelect">
                    <input type="text" Name="Branch" class="form-control mandatory" id="customSelectName" placeholder="Select..." readonly>

                    <div class="custom-multiselect-menu border rounded bg-white position-absolute mt-1 w-100" id="checkboxContainer" style="display: none; max-height: 200px; overflow-y: auto;">
                      
                    </div>
                </div>
            </div>
             


        </div>
        <div class="flex gap-4">
            <a href="~/Admin/UserRightsList?menuid=@MenuId" class="bg-blue-200 hover:bg-blue-300 text-white-800 px-4 py-2 rounded"><< Back to List</a>
            <button id="savebtn" onclick="Save()" class="bg-green-600 hover:bg-green-700 text-white rounded px-4 py-2 ">Submit</button>
       

        </div>
        <div id="printdiv"></div>
    </div>
</div>
