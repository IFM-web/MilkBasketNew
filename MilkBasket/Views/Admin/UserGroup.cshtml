
@{
    ViewData["Title"] = "UserGroup";
    Layout = "~/Views/Shared/_Layout.cshtml";
    @inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor

    @using Microsoft.AspNetCore.Http
    int MenuId = Convert.ToInt32(HttpContextAccessor.HttpContext.Session.GetString("MenuId"));
}

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
  <script src="https://cdn.tailwindcss.com"></script>
<div class="w-full min-h-screen" id="bdy">
   
    <input type="hidden" id="Hid_Id" value="0" />
    <div class="bg-white shadow rounded-lg p-6">
        <!-- Header -->
        <div class="flex items-center justify-between mb-6">
            <h1 class="text-2xl font-bold text-gray-800">User Group</h1>
           @*  <button type="button" class="bg-blue-500 hover:bg-blue-600 text-white px-4 py-2 rounded" data-toggle="modal" data-target="#exampleModal">
                Bulk Upload
            </button> *@
        </div>

 

        <!-- Form Grid -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mb-4">
            <div>
                <label for="TypeCode" class="block text-sm font-medium text-gray-700">UserGroup Code</label>
                <input type="text" id="UserGroupCode" name="UserGroup Code" class="form-control mandatory"/>
            </div>
            <div>
                <label for="UserGroupName" class="block text-sm font-medium text-gray-700">UserGroup Name</label>
              <input type="text" id="UserGroupName" name="UserGroup Name " class="form-control mandatory"/>
            </div>
            <div class="mt-4">
              <input type="checkbox" checked id="status"/>  <label for="status" class="text-sm font-medium text-gray-700">Status</label>
               
            </div>
        
        </div>

        <p id="massage" class="text-red-600 font-medium mb-4"></p>

        <!-- Buttons -->
        <div class="flex gap-4">
            <a href="~/Admin/UserGroupList?Menuid=@MenuId" class="bg-blue-200 hover:bg-blue-300 text-white-800 px-4 py-2 rounded">
                « Back to List
            </a>
            <button id="savebtn" onclick="Save()" class="bg-green-600 hover:bg-green-700 text-white px-4 py-2 rounded">
                Save
            </button>
          
        </div>
    </div>

 
</div>

<!-- Scripts -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js"></script>
<script src="~/js/Admin/UserGroup.js" asp-append-version="true"></script>
<script src="~/js/Master.js" asp-append-version="true"></script>


