@{
    ViewData["Title"] = "PTwiseTimebrackets";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="https://cdn.tailwindcss.com"></script>

<div class="w-full  min-h-screen" id="bdy">
    <div class="mx-auto bg-white shadow rounded-lg p-6">
        <h3>PT Wise Time Brackets</h3>
        <!-- Filter Section -->
        <div class="flex flex-wrap items-center gap-4 bg-blue-100 p-4 rounded">
            <div class="flex items-center gap-2">
                <label class="text-sm font-medium text-gray-700">Date:</label>
                <input type="date" id="Date" value="@DateTime.Now.ToString("yyyy-MM-dd")" class="border rounded px-2 py-1 text-sm" />
            </div>
            <button class="bg-blue-500 text-white px-4 py-1 rounded hover:bg-blue-600" onclick="ShowAPTwiseTimebrackets()">View</button>
           
                <button onclick="exportexcel1('PTwiseTimebrackets')" class="bg-blue-500 text-white px-4 py-1 rounded hover:bg-blue-600">
                    Export to Excel
                </button>
           
        </div>


        <!-- Export Button -->
    

   
        <div class="overflow-x-auto w-full mt-4">
            <table id="data-table" class="vw-full border text-sm text-center">
                <thead>
                    <tr>
                        <th class="border px-2 py-1">S.No</th>
                        <th class="border px-2 py-1">Company</th>
                        <th class="border px-2 py-1">Region</th>
                        <th class="border px-2 py-1">Branch</th>
                        <th class="border px-2 py-1">Employee Number</th>
                        <th class="border px-2 py-1">Employee Name</th>
                        <th class="border px-2 py-1">Designation</th>
                        <th class="border px-2 py-1">Cluster Name</th>
                        <th class="border px-2 py-1">Date</th>
                        <th class="border px-2 py-1">Check IN Time</th>
                        <th class="border px-2 py-1">Check Out Time</th>
                        <th class="border px-2 py-1">Check In Before 4AM to 4:15AM</th>
                        <th class="border px-2 py-1">Check In From 4:16AM to 4:30AM</th>
                        <th class="border px-2 py-1">Check In From 4:31AM to 4:45AM</th>
                        <th class="border px-2 py-1">Check In From 4:46AM to 5AM</th>
                        <th class="border px-2 py-1">Check In After 5AM</th>
                    </tr>
                </thead>
                <tbody id="tbodydata" class="bg-white">
                    <!-- Dynamic rows will be appended here -->
                </tbody>
            </table>
        </div>


        <div id="loaderOverlay" class="position-fixed top-0 start-0 w-100 h-100 bg-white bg-opacity-75 d-flex justify-content-center align-items-center d-none" style="z-index: 1055; display: none;">
            <div class="spinner-border text-primary" role="status" style="width: 3rem; height: 3rem;">
                <span class="visually-hidden">Loading...</span>
            </div>
        </div>

    </div>
</div>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js" integrity="sha512-v2CJ7UaYy4JwqLDIrZUI/4hqeoQieOmAZNXBeQyjo21dadnwR+8ZaIJVT8EE2iyI61OV8e6M8PP2/4hpQINQ/g==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>

<script src="~/js/Master.js"></script>
<script src="~/js/Reports/PTwiseTimebrackets.js" asp-append-version="true"></script>
<script>

    $(document).ready(() => {

        DownloadFormat("ClusterExcelfrommat");
    })

</script>
