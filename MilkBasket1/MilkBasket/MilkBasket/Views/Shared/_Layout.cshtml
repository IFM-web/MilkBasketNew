@* Layout.cshtml - Updated with animation, responsive sidebar, and full-width content expansion *@

@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MilkBasket</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MilkBasket.styles.css" asp-append-version="true" />

    <style>
        body {
            margin: 0;
            font-family: "Poppins", sans-serif;
            background-color: #f5f7fb;
        }

        .wrapper {
            display: flex;
            height: 100vh;
            overflow: hidden;
        }

        .sidebar {
            width: 250px;
            background-color: #1e1e2d;
            color: white;
            transition: all 0.4s ease;
            flex-shrink: 0;
            transform: translateX(0);
            position: relative;
            z-index: 1000;
        }

        .sidebar .logo {
            padding: 1rem;
            font-size: 1.3rem;
            background-color: #111827;
            text-align: center;
            font-weight: 600;
            letter-spacing: 1px;
        }

        .sidebar .menu {
            padding: 1rem 0;
        }

        .main-panel {
            flex-grow: 1;
            display: flex;
            flex-direction: column;
            transition: all 0.4s ease;
            width: 100%;
        }

        .top-navbar {
            background: #fff;
            border-bottom: 1px solid #e4e6ef;
            padding: 0.75rem 1rem;
            display: flex;
            align-items: center;
            justify-content: space-between;
            height: 60px;
        }

        .top-navbar .toggle-btn {
            background: none;
            border: none;
            font-size: 1.5rem;
            color: #5d5fef;
            cursor: pointer;
        }

        .top-navbar .dropdown img {
            width: 36px;
            height: 36px;
            border-radius: 50%;
            object-fit: cover;
        }

        main.content-area {
            padding: 1.5rem;
            overflow-y: auto;
            background-color: #f5f7fb;
            flex-grow: 1;
            transition: all 0.4s ease;
        }

        .sidebar-collapsed .sidebar {
            transform: translateX(-100%);
            position: absolute;
        }

        .sidebar-collapsed .main-panel {
            width: 100%;
            margin-left: 0 !important;
        }

        @@media (max-width: 768px) {
            .sidebar {
                position: fixed;
                height: 100%;
                z-index: 1050;
                transform: translateX(-100%);
            }

            .sidebar.show {
                transform: translateX(0);
            }

            .main-panel {
                width: 100% !important;
                margin-left: 0 !important;
            }
        }
    </style>
</head>
<body>
    <div class="wrapper" id="layoutWrapper">
        <nav class="sidebar" id="sidebarArea">
            <div class="logo">
                MilkBasket
            </div>
            <div class="menu">
                @await Component.InvokeAsync("Menu")
            </div>
        </nav>

        <div class="main-panel">
            <header class="top-navbar">
                <button id="sidebarToggle" class="toggle-btn">
                    <i class="fas fa-bars" id="toggleIcon"></i>
                </button>
                <div class="dropdown">
                    <a href="#" class="dropdown-toggle d-flex align-items-center" data-bs-toggle="dropdown">
                        <img src="~/images/user.png" alt="User" />
                        <span class="ms-2 d-none d-md-inline">@* @HttpContextAccessor.HttpContext.Session.GetString("Username") *@ Settings</span>
                    </a>
                    <ul class="dropdown-menu dropdown-menu-end">
                        <li><a class="dropdown-item" href="@Url.Action("Logout", "Admin")">Logout <i class="fas fa-sign-out-alt"></i></a></li>
                    </ul>
                </div>
            </header>

            <main class="content-area">
                @RenderBody()

            </main>
        </div>
    </div>
 
    <script src="https://cdn.jsdelivr.net/npm/xlsx@0.18.5/dist/xlsx.full.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        $(function () {
            $('#sidebarToggle').on('click', function () {
                $('#layoutWrapper').toggleClass('sidebar-collapsed');
                $('#sidebarArea').toggleClass('show');
                $('#toggleIcon').toggleClass('fa-bars fa-times');
            });
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>